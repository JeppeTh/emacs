(defvar tbox-session nil)
(defvar tbox-host nil)
(defvar tbox-container-session nil)

(defun init-tbox-parameters ()
  (interactive)
  (let* ((lock-file (determine-session-file))
         (session-data (shell-command-to-string (concat "cat " lock-file))))
    (setq tbox-session (my-string-match "TBOX_SESSION=\\([0-9]+\\)" session-data 1))
    ;;(setenv "tbox-session" tbox-session)
    (setq tbox-host (concat (my-string-match "TBOX_HOST=\\(.+\\)$" session-data 1)
                            "-tb"
                            (my-string-match "TBOX_INSTANCE=\\([0-9]+\\)" session-data 1)))
    (if (not (string-match "Command not found" (tbox-cmd-to-string "which kubectl")))
        (setq tbox-container-session tbox-session))))

(defun tbox-session ()
  (if (not tbox-session)
      (init-tbox-parameters))
  tbox-session)

(defun numbers-in-string (string)
  (replace-regexp-in-string "[^0-9]" "" string))

(defun determine-session-file ()
  (interactive)
  (let* ((lock-files (shell-command-to-string "echo -n `grep -l -e \"$GSN_WS_NAME\"$ /proj/tecsas-scratch/var/tbox/sessions/\"$USER\"_*.lock`"))
         (lock-files (if (string-match "No such file" lock-files) 
                         (error "no-session") 
                       (split-string lock-files " ")))
         (sessions (mapcar #'numbers-in-string lock-files)))
    (if (> (length sessions) 1)
        (nth (cl-position (completing-read "Which tbox-session?:" sessions) sessions :test #'equal) lock-files)
      (car lock-files))))

