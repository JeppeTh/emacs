      (if (and historyfile (file-readable-p historyfile))
          (progn
            (make-local-variable 'term-input-ring-file-name)
            (setq term-input-ring-file-name historyfile)
            (term-read-input-ring)
            ))
      ;;(setq term-prompt-regexp "^[^<>=,]*> ?")
      (setq term-prompt-regexp "^\\([^<>=,]*> ?\\|==.+ # \\)")
        ;;;;Don't use compilation
